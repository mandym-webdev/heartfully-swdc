@import "style_guide";

#home-wrapper {
  background: url(<%= asset_path('best_photo_ever.jpg') %>);
  background-size: 100%;
  background-repeat: no-repeat;
  height: auto;  
}

#home-story {
  padding-top: 20px;

  h2, h3 {
    text-align: center;
    font-family: helvetica neue;
    margin-top: 5px;
  }
}

.taglines {
  padding-bottom: 180px;
}



.story-wrapper, .registry-button {
  width: 70%;
  margin: 0 auto;
  background:#7f7f7f;
  background:rgba(255,255,255,.7);
}

.registry-create-button a {
  margin: 0 auto;
}

.story-img img{
  height: 40px;
  width: 40px;
}

.story img {
  padding:10px;
  margin: 0 auto;
}

.story p {
  color:black;
}

.home-steps {
  width: 33%;
  color: #ffffff;
  text-align: center;
  font-family: helvetica neue; 
}

.home-ngo {
  color: $emphasis-color;

}

.ngo-wrapper {
  width: 30%;
  margin: 0 auto;
  padding-top: 20px;
  font-weight: bold;
}

